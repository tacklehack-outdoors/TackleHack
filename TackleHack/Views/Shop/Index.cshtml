@model IEnumerable<TackleHack.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a class="overflow-title" asp-action="Details" asp-area="" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ProductName)</a>
                            </h4>
                            <h5>$@Html.DisplayFor(modelItem => item.Msrp)</h5>
                            <p class="card-text overflow-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9734; &#9734; &#9734; &#9734; &#9734;</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>